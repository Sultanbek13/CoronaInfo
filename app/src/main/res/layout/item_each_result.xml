<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FF1A1B1E"
    >

    <TextView
        android:id="@+id/tvCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="CHINA"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tvCases"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="Cases:"
        android:textSize="16sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tvCountry"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/tvDeaths"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="4dp"
        android:text="Deaths:"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tvCases"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/tvRecovered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="4dp"
        android:text="Recovered:"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tvDeaths"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/countCases"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/tvCases"
        app:layout_constraintTop_toTopOf="@id/tvCases"
        app:layout_constraintBottom_toBottomOf="@id/tvCases"
        android:text="80.777 |"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginLeft="4dp" />

    <TextView
        android:id="@+id/countDeath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/tvDeaths"
        app:layout_constraintTop_toTopOf="@id/tvDeaths"
        app:layout_constraintBottom_toBottomOf="@id/tvDeaths"
        android:text="3000 |"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginLeft="4dp" />

    <TextView
        android:id="@+id/countRecovered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/tvRecovered"
        app:layout_constraintTop_toTopOf="@id/tvRecovered"
        app:layout_constraintBottom_toBottomOf="@id/tvRecovered"
        android:text="9000 |"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginLeft="4dp" />

    <TextView
        android:id="@+id/casesTodayCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/countCases"
        app:layout_constraintTop_toTopOf="@id/countCases"
        app:layout_constraintBottom_toBottomOf="@id/countCases"
        android:text="Today: 11"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginLeft="4dp" />

    <TextView
        android:id="@+id/deathsTodayCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/countDeath"
        app:layout_constraintTop_toTopOf="@id/countDeath"
        app:layout_constraintBottom_toBottomOf="@id/countDeath"
        android:text="Today: 13"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginLeft="4dp" />

    <TextView
        android:id="@+id/criticalCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/countRecovered"
        app:layout_constraintTop_toTopOf="@id/countRecovered"
        app:layout_constraintBottom_toBottomOf="@id/countRecovered"
        android:text="Critical 3.645"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginLeft="4dp" />

</androidx.constraintlayout.widget.ConstraintLayout>